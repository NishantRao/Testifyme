    <title>Class Pin</title>
</head>


<body>
    {{> navbarDark}}
    <div class="container text-center mt-5 col-lg-7 col-md-6 ">
        <form action="/classdetail" method="post">

            <div class="form-group">
                <label for="classPin">
                    <h4>Create Your Class Code</h4>
                </label>

                <input required type="text" name="Class_Code" id="classPin" class="form-control"
                    placeholder="Enter 6-character">
            </div>

            <div class="form-group mt-4">
                <label for="Subject_Name">
                    <h4>Your Subject Name</h4>
                </label>

                <input required type="text" name="Subject" id="classPin" class="form-control"
                    placeholder="Enter Your Subject Name">
            </div>

            <div class="form-group mt-5">
                <button class="btn btn-primary btn-block" type="submit" value="Submit" id="submit-btn"
                    >Submit</button>
            </div>

            <div class="form-group mt-5">
                <a href="/TDashboard">Add Content to exsisting class </a>
            </div>
        </form>
    </div>
</body>
